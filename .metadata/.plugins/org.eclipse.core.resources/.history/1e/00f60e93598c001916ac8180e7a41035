package io.weather.webapp.portal;

import org.springframework.stereotype.Controller;
import org.springframework.web.bind.annotation.GetMapping;

/**
 * This Controller is the resource for the login logout of the application.
 * 
 * @author christian
 *
 */

@Controller
public class PortalController {

	/**
	 * 
	 * @return this controller will return login page
	 */
	@GetMapping(value = "/login")
	public String login() {
		return "login";
	}
}
