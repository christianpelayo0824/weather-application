 * 
 */
package io.weather.webapp.service;

import org.springframework.stereotype.Service;

import io.weather.webapp.entity.UserEntity;
import io.weather.webapp.repository.UserRepository;
import io.weather.webapp.service.UserService;

/**
 * @author christian
 *
 */
@Service
public class UserImpService implements UserService {

	private UserRepository userRepository;

	/**
	 * @param userRepository
	 */
	public UserImpService(UserRepository userRepository) {
		super();
		this.userRepository = userRepository;
	}

	@Override
	public void createUser(UserEntity user) {
		this.userRepository.save(user);
	}

}
