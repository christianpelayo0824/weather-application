 */
package io.weather.webapp.api.location.owm;

/**
 * @author christian
 *
 */
public class LocationImpService implements LocationService {

	private LocationRepository locationRepository;

	/**
	 * @param locationRepository
	 */
	public LocationImpService(LocationRepository locationRepository) {
		super();
		this.locationRepository = locationRepository;
	}

	@Override
	public void saveLocation(Location location) {
		this.locationRepository.save(location);
	}

}
